package require Tk

set w .window
toplevel $w
wm title $w "Two List Boxes Example"

listbox $w.lb1 -selectmode single
listbox $w.lb2 -selectmode single
pack $w.lb1 $w.lb2 -side left -padx 10 -pady 10

foreach item {Apple Banana Cherry Mango Orange} {
    $w.lb1 insert end $item
}

bind $w.lb1 <<ListboxSelect>> {
    set index [$w.lb1 curselection]
    if {$index ne ""} {
        set item [$w.lb1 get $index]
        $w.lb2 insert end $item
        $w.lb1 delete $index
    }
}

bind $w.lb2 <<ListboxSelect>> {
    set index [$w.lb2 curselection]
    if {$index ne ""} {
        set item [$w.lb2 get $index]
        $w.lb1 insert end $item
        $w.lb2 delete $index
    }
}

tk.mainloop
